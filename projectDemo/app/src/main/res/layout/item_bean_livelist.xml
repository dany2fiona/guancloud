<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/bg"
    >
    
    <RelativeLayout 
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginBottom="10dp"
	android:background="@drawable/refreshlist_press_bg"
    android:paddingLeft="8.5dp"
    android:paddingRight="16dp"
    >

    <ImageView 
        android:id="@+id/iv_room"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        />
    
   <RelativeLayout 
        android:layout_toLeftOf="@id/iv_room"
       	android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       >
       <TextView 
           android:id="@+id/tv_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/size_big"
           android:textColor="@color/gray"
    	   android:text="张三"
    	   android:layout_marginTop="15dp"
           />
       <TextView 
           android:layout_below="@id/tv_name"
           android:id="@+id/tv_roomid"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/size_big"
           android:textColor="@color/gray"
    	   android:text="1233"
    	   android:layout_marginTop="15dp"
           />
       <TextView 
           android:layout_below="@id/tv_roomid"
           android:id="@+id/tv_room_alias"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/size_normal2"
           android:textColor="@color/lightgray_color2"
    	   android:text="das"
    	   android:layout_marginTop="10dp"
    	   android:layout_marginBottom="15dp"
           />
       
   </RelativeLayout>


</RelativeLayout>
    
</RelativeLayout>
