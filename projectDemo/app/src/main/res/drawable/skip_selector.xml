<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- button normal -->
    <item android:state_pressed="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <!-- 填充的颜色 -->
            <corners android:radius="20dp"/>
		   <!--  <stroke android:width="@dimen/line_width" android:color="@color/lightgray_color3"/> -->
		    <solid android:color="@color/lightgray_color3"/>
		    <padding android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp"/>
        </shape>
        
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
           <corners android:radius="20dp"/>
           <!--  <stroke android:width="@dimen/line_width" android:color="@color/lightgray_color3"/> -->
            <solid android:color="@color/item_press"/>
            <padding android:top="0dp" android:bottom="0dp" android:left="0dp" android:right="0dp"/>
        </shape>    
    </item>

</selector>


